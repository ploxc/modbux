{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*",
    "src/backend/**/*",
  ],
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "moduleResolution": "bundler",
    "types": [
      "electron-vite/node",
    ],
    "paths": {
      "@shared": [
        "./src/shared"
      ]
    }
  }
}