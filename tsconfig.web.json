{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/shared/**/*.ts"
  ],
  "compilerOptions": {
    // "composite": true, // gave me errors with zustand, mutative
    "strict": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "@renderer/*": [
        "./src/renderer/src/*"
      ],
      "@shared": [
        "./src/shared"
      ]
    }
  }
}